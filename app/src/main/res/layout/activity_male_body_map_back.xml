                android:layout_marginRight="220dp"
                android:src="@drawable/right_palm_severe"/>

            <ImageView
                android:id="@+id/img_left_palm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/left_palm_severe"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/linear_stomach"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linear_sholder"
            android:layout_marginTop="80dp"
