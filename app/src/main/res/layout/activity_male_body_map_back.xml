                android:src="@drawable/right_back_lower_back_severe"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_hip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linear_sholder"
            android:layout_marginTop="110dp"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/img_left_hip_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/left_hip_back_severe"
                android:layout_marginRight="77dp"/>

            <ImageView
                android:id="@+id/img_right_hip_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/right_hip_back_severe"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_pelvin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linear_chest"
            android:layout_marginTop="135dp"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/img_left_hip2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/left_hip2_severe"/>

            <ImageView
                android:id="@+id/img_right_hip2_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/right_hip2_back_severe"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_thigh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linear_stomach"
            android:layout_marginTop="75dp"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/img_left_thigh_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/left_thigh_back_severe"/>

            <ImageView
                android:id="@+id/img_right_thigh_back"
                android:layout_width="wrap_content"
