<?xml version="1.0" encoding="utf-8"?>
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white">

        <LinearLayout
            android:id="@+id/linear_head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/img_left_head_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/left_head_back_severe"/>

            <ImageView
                android:id="@+id/img_right_head_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/right_head_back_severe"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_face"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linear_head"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/img_left_head_2_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/left_head_2_back_severe"/>

            <ImageView
                android:id="@+id/img_right_head_2_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/right_head_2_back_severe"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_neck"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linear_face"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/img_left_neck_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/left_neck_back_severe"/>

            <ImageView
                android:id="@+id/img_right_neck_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/right_neck_back_severe"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/linear_chest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linear_face"
            android:gravity="center"
            android:layout_marginTop="12dp">


            <ImageView
                android:id="@+id/img_left_back_top_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/left_back_top__men_back_severe"/>

            <ImageView
                android:id="@+id/img_right_back_top_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/right_back_top_back_severe"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/linear_middle_chest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="67dp"
            android:layout_below="@+id/linear_neck"
            android:gravity="center">


            <ImageView
                android:id="@+id/img_left_back_middle_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/left_back_middle_men_back_severe"/>

            <ImageView
                android:id="@+id/img_right_back_middle_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/right_back_middle_back_severe"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_sholder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/linear_face"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/img_left_shoulder_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="25dp"
                android:src="@drawable/left_shoulder_back_severe"/>

            <ImageView
                android:id="@+id/img_right_shoulder_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/right_shoulder_back_severe"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_arm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="76dp"
            android:layout_below="@+id/linear_face"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/img_right_arm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="120dp"
                android:src="@drawable/right_arm_severe"/>

            <ImageView
                android:id="@+id/img_left_arm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/left_arm_male_severe"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_cubital"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="147dp"
            android:layout_below="@+id/linear_face"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/img_right_cubital"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="137dp"
                android:src="@drawable/right_cubital_severe"/>

            <ImageView
                android:id="@+id/img_left_cubital"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/left_cubital_severe"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_forearm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="175dp"
            android:layout_below="@+id/linear_face"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/img_right_forearm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="145dp"
                android:src="@drawable/right_forearm_severe"/>

            <ImageView
                android:id="@+id/img_left_forearm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/left_forearm_severe"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_rist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="241dp"
            android:layout_below="@+id/linear_face"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/img_right_wrist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="195dp"
                android:src="@drawable/right_wrist_severe"/>

            <ImageView
                android:id="@+id/img_left_wrist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/left_wrist_severe"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_palm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="17dp"
            android:layout_below="@+id/linear_forearm"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/img_right_palm"
                android:layout_width="wrap_content"
