                android:src="@drawable/right_knee_back_severe"/>

            <ImageView
                android:id="@+id/img_left_knee_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/left_knee_back_severe"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_crus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linear_thigh"
            android:layout_marginTop="50dp"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/img_left_crus_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/left_crus_men_back_severe"/>

            <ImageView
                android:id="@+id/img_right_crus_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/right_crus_back_severe"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linear_knee"
            android:layout_marginTop="87dp"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/img_right_tarsus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:src="@drawable/right_tarsus_severe"/>

            <ImageView
                android:id="@+id/img_left_tarsus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/left_tarsus_severe"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linear_crus"
            android:layout_marginTop="35dp"
            android:layout_marginBottom="60dp"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/img_right_foot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:src="@drawable/right_foot_severe"/>

            <ImageView
                android:id="@+id/img_left_foot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/left_foot_severe"/>

        </LinearLayout>

    </RelativeLayout>
</ScrollView>